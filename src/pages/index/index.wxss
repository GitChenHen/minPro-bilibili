/* 首页导航 */
.nav{

}
.nav-view{
white-space: nowrap;
padding: 5rpx 0;
}
.nav-item{
    padding: 20rpx 45rpx;
    font-size: 30rpx;
    display: inline-block;
}
.nav-item.active{
  border-bottom: 5rpx solid red;
}
/* 首页轮播图 */
.slides{

}
.slides image{
width: 100%;
height: 100%;
}
.slides navigator{
width: 100%;
height: 100%;
}
/* 首页视频列表 */
.videos{
  display: flex;
  flex-wrap: wrap;
  padding:5rpx 5rpx;
  justify-content: space-between;
}
.video-item{
  width:48%;
   margin-bottom: 30rpx;
}
.video-img{
position: relative;

}
.video-img image{
  width: 100%;
  border-radius: 20rpx;
}
.video-img .video-info{
position: absolute;
display: flex;
bottom: 10rpx;
left: 20rpx;
justify-content: space-around;
color: rgb(228, 20, 20);
font-size: 25rpx;
font-weight: bold;
}
.video-img .video-info .playCount-info{
margin-right: 5rpx;
}
.video-img .video-info .commentCount-info{
margin-left: 5rpx;
}
.video-title{
  font-size: 28rpx;
  display: block;
  overflow: hidden;
  /* 规定段落中的文本不进行换行  默认。空白会被浏览器忽略 */
  white-space: normal;
  /* 显示省略符号来代表被修剪的文本 */
  text-overflow: ellipsis;
   /*指定文本如果足够长得话，应该换行  */
  word-wrap: break-word;
  /* 指定文本显示的行数 */
  -webkit-line-clamp:2;
  /* 指定容器为水平排列 */
  -webkit-box-orient: vertical;
}
